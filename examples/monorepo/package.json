{
  "name": "my-monorepo",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "@sap/eslint-config": "../../",
    "eslint": "10.0.0",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "lint-staged": "16.2.7",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "scripts": {
    "lint": "npm run eslint && npm run prettier",
    "eslint": "eslint . --fix",
    "eslint:ci": "eslint .",
    "prettier": "prettier --write \"**/*.{json,yml,yaml,md}\"",
    "prettier:ci": "prettier --check \"**/*.{json,yml,yaml,md}\"",
    "prepare": "is-ci || husky"
  },
  "lint-staged": {
    "./**/*.{js,ts,tsx}": "eslint --quiet",
    "**/*.{json,yml,yaml,md}": "prettier --check"
  }
}

{
  "name": "@sap/eslint-config",
  "version": "0.4.1",
  "description": "ESLint configuration for SAP ecosystem",
  "author": "SAP SE",
  "license": "Apache-2.0",
  "main": "configs/index.js",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "test": "jest --ci --collectCoverage",
    "test:watch": "jest --watchAll",
    "lint": "npm run eslint && npm run prettier",
    "eslint": "eslint . --fix",
    "eslint:ci": "eslint .",
    "prettier": "prettier --write \"**/*.{json,yml,yaml,md}\"",
    "prettier:ci": "prettier --check \"**/*.{json,yml,yaml,md}\"",
    "prepare": "is-ci || husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SAP/eslint-config.git"
  },
  "dependencies": {
    "@eslint/js": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "globals": "17.0.0",
    "typescript-eslint": "8.51.0"
  },
  "devDependencies": {
    "@swc/jest": "0.2.39",
    "@tsconfig/node16": "16.1.8",
    "@types/fs-extra": "11.0.4",
    "@types/jest": "30.0.0",
    "del": "6.1.1",
    "eslint": "9.39.2",
    "execa": "5.1.1",
    "fs-extra": "11.3.3",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "lint-staged": "16.2.7",
    "prettier": "3.7.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9",
    "prettier": "^3"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "lint-staged": {
    "./**/*.{js,ts}": "eslint --quiet",
    "**/*.{json,yml,yaml,md}": "prettier --check"
  }
}
